<section class="round">
  <div class="container">


<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @movie.title %>
</p>

<p>
  <b>Year:</b>
  <%= @movie.year %>
</p>

<p>
  <b>Director:</b>
  <%= @movie.director %>
</p>

<p>
  <b>Description:</b>
  <%= @movie.description %>
</p>

<p>
  <b>Pic:</b>
  <%= image_tag @movie.image_url %>
</p>

<p>
  <b>Characters:</b>
  <% @characters = Role.find_all_by_movie_id(params[:id]) %>
  <% for character in @characters do %>
    <br /> '<%= character.role_title %>'  played by <a href="/actors/<%= character.actor_id %>"><%= character.actor.name %></a>
  <% end %>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

  </div>
</section>